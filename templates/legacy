    <script>
        // Add interactive effects
        document.addEventListener('mousemove', function(e) {
            const logo = document.querySelector('.cool-helmet-logo');
            const rect = logo.getBoundingClientRect();
            const centerX = rect.left + rect.width / 2;
            const centerY = rect.top + rect.height / 2;
            
            const deltaX = (e.clientX - centerX) / 30;
            const deltaY = (e.clientY - centerY) / 30;
            
            logo.style.transform = `translate(${deltaX}px, ${deltaY}px)`;
        });

        // Reset position on mouse leave
        document.addEventListener('mouseleave', function() {
            const logo = document.querySelector('.cool-helmet-logo');
            logo.style.transform = 'translate(0, 0)';
        });

        // Add click effect
        document.querySelector('.cool-helmet-logo').addEventListener('click', function() {
            this.style.transform = 'scale(0.95)';
            setTimeout(() => {
                this.style.transform = 'scale(1)';
            }, 200);
        });

        // Status indicator animation
        setInterval(() => {
            const dots = document.querySelectorAll('.status-dot');
            dots.forEach((dot, index) => {
                setTimeout(() => {
                    dot.style.animation = 'none';
                    setTimeout(() => {
                        dot.style.animation = 'statusPulse 2s ease-in-out infinite';
                    }, 100);
                }, index * 500);
            });
        }, 5000);
    </script>
